  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/storage": "^5.3.0",
    "@types/archiver": "^3.1.0",
    "@types/uuid": "^8.3.0",
    "archiver": "^5.0.2",
    "canvas": "^2.6.1",
    "express": "^4.17.1",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
